@app.get("/health")
def health():
    """Basic health endpoint."""
    return JSONResponse({"status": "ok", "version": APP_VERSION})

@app.get("/v1/health")
def health_v1():
    """Extended diagnostics for UI probe."""
    return JSONResponse({
        "status": "ok",
        "version": APP_VERSION,
        "services": ["api"],
        "cors_allowed": origins,
        "agents": [meta["id"] for meta in AGENT_REGISTRY.values()],
        "aliases": _ALIAS_TO_CANON,
        "hub_endpoints": [
            "/v1/hub/models",
            "/v1/hub/datasets",
            "/v1/hub/recommendations",
        ],
    })
